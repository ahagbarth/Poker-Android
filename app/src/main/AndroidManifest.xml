<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".SignupActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".MainPageActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".UserProfileActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".UsernameActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".FriendsActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".AddFriendActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".FriendProfileActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".QuickmatchGameActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CreateGameActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".JoinGameActivity"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".SettingsActivity"
            android:screenOrientation="sensorLandscape"></activity>
    </application>

</manifest>